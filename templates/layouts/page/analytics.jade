doctype html
html(lang='en-us', data-ng-app='flickmiApp')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width', initial-scale='1.0' , maximum-scale='1.0' , user-scalable=no)
		meta(name="apple-mobile-web-app-capable" , content="yes")

		title= 'Flickmi Analytics'
		
		//Basic Styles
		link(href='/css/bootstrap.min.css', rel='stylesheet', type='text/css')
		link(href='/css/font-awesome.min.css', rel='stylesheet', type='text/css')

		//SmartAdmin Styles : Please note (smartadmin-production.css) was created using LESS variables
		link(href='/css/smartadmin-production.min.css', rel='stylesheet', type='text/css')
		link(href='/css/smartadmin-skins.min.css', rel='stylesheet', type='text/css')

		// SmartAdmin RTL Support is under construction
		link(href='/css/smartadmin-rtl.min.css', rel='stylesheet', type='text/css')

		//We recommend you use "your_style.css" to override SmartAdmin
		//specific styles this will also ensure you retrain your customization with each SmartAdmin update.
		link(href='/styles/flickmi.css', rel='stylesheet' , type='text/css')

		link(href='/css/demo.min.css', rel='stylesheet' , type='text/css')
		
		//Angular Related CSS
		link(href='/css/ng.min.css', rel='stylesheet', type='text/css')

		
		//FAVICONS 
		//link(rel='shortcut icon', href='img/favicon/favicon.ico')
		//link(rel='icon', href='img/favicon/favicon.ico')
		link(rel='shortcut icon', href='/images/icons/flickmi-favicon.png')

		//GOOGLE FONT 
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700', rel='stylesheet', type='text/css')


		//Startup image for web apps 
		link(href='/images/icons/flickmi-touch-76.png', sizes="76x76", rel='apple-touch-icon')
		link(href='/images/icons/flickmi-touch-120.png', sizes="120x120", rel='apple-touch-icon')
		link(href='/images/icons/flickmi-touch-152.png', sizes="152x152", rel='apple-touch-icon')
		link(rel="apple-touch-startup-image" , href="/images/icons/flickmi-touch-76.png")
		
		//iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance 
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='black')

		
		
		
		//link(href='/styles/bootstrap/bootstrap.css', rel='stylesheet', type='text/css')
		//link(href='/styles/site.min.css', rel='stylesheet')
		//link(href='/styles/flickmi.css', rel='stylesheet')
		link(href='/styles/mapStyle.css', rel='stylesheet')
		//link(href='/styles/ie-hack.css', rel='stylesheet')
		link(href='/js/lib/charts/src/nv.d3.css', rel='stylesheet')

		body(data-ng-controller="SmartAppController")
			block content

		