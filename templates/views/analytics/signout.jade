extends ../../layouts/page/analytics
block controllers
	script(src='/controllers/analytics/signoutController.js')
	
block content
	.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
		div(data-ng-controller="signoutController")
			.row.placeholders
				.col-xs-12.col-sm-12.placeholder
					.col-xs-6.col-sm-6.placeholder
						h2 Sign Out
						#signout
							ul
								li
									span(ng-click="getLineChartData('day','totalLogouts','signout')") 1D
								li
									span(ng-click="getLineChartData('week','totalLogouts','signout')")  1W
								li
									span(ng-click="getLineChartData('month','totalLogouts','signout')")  1M
								li
									span(ng-click="getLineChartData('sixmonths','totalLogouts','signout')")  6M
								li
									span(ng-click="getLineChartData('year','totalLogouts','signout')")  1Y
								li
									span(ng-click="getLineChartData('Max','totalLogouts','signout')")  Max
							svg(style='height: 380px;')	
				.col-xs-6.col-sm-6.placeholder
					h4 User Location
					#map
				.col-xs-6.col-sm-6.placeholder
					h4 User Devices
					.col-xs-6.col-sm-6.placeholder
						h5 Devices
						svg#deviceChart
					.col-xs-6.col-sm-6.placeholder
						h5 Browsers
						svg#browserChart