include ../../mixins/chartSummary
div.row
	div.col-xs-12.col-sm-7.col-md-7.col-lg-4
		h1.page-title.txt-color-blueDark
			i.fa-fw.fa.fa-users
			| Usage
			span > User Stats 
	div.col-xs-12.col-sm-5.col-md-5.col-lg-8(data-ng-controller="breadCrumbController")
		+breadCrumbChart()

div
	section#widget-grid
		div.row
			article.col-xs-12.col-sm-6.col-md-6.col-lg-6
				// new widget
				div#wid-id-4.jarviswidget(data-widget-colorbutton='false', data-widget-editbutton='false', data-widget-deletebutton='false')
					header
						span.widget-icon
							i.fa.fa-map-marker
						h2 User Location
						i#popoverLocation.fa.fa-question-circle(data-toggle='popover', data-placement='bottom', data-content=' Flickmi members grouped by the country they selected when registering.', data-original-title='', title='')
					div
						// widget edit box
						div.jarviswidget-editbox
							div
								label Title:
								input(type='text')
						// end widget edit box
						div.widget-body.no-padding
							// content goes here
							div#vector-map.vector-map
							div#heat-fill
								span.fill-a 0
								span.fill-b 5,000
			article.col-xs-12.col-sm-6.col-md-6.col-lg-6
				div#wid-id-9.jarviswidget(data-widget-collapsed='false', data-widget-colorbutton='false', data-widget-deletebutton='false', data-widget-editbutton='false')
					header
						span.widget-icon
							i.fa.fa-bar-chart-o
						h2 Contacts Per User
						i#popoverContacts.fa.fa-question-circle(data-toggle='popover', data-placement='bottom', data-content='A frequency distribution showing how many contacts members have. The x-axis shows buckets for contact list length. The y-axis shows the number of members in the bucket.', data-original-title='', title='')
					div
						// widget edit box
						div.jarviswidget-editbox
						// This area used as dropdown edit box
						div#contactsPerUser.widget-body.no-padding
							svg(style='height: 380px;')
		div.row
			article.col-xs-12.col-sm-6.col-md-6.col-lg-6
				div#wid-id-1.jarviswidget(data-widget-collapsed='false', data-widget-colorbutton='false', data-widget-deletebutton='false', data-widget-editbutton='false')
					header
						span.widget-icon
							i.fa.fa-bar-chart-o
						h2 Cards Sent Per User
						i#popoverCards.fa.fa-question-circle(data-toggle='popover', data-placement='bottom', data-content='A frequency distribution showing how many times flickmi members have shared their details. The x-axis shows buckets for contact list length. The y-axis shows the number of members in the bucket.', data-original-title='', title='')
					div
						// widget edit box
						div.jarviswidget-editbox
						// This area used as dropdown edit box
						div#cardsSentPerUser.widget-body.no-padding
							svg(style='height: 380px;')
			article.col-xs-12.col-sm-6.col-md-6.col-lg-6
				div#wid-id-2.jarviswidget(data-widget-collapsed='false', data-widget-colorbutton='false', data-widget-deletebutton='false', data-widget-editbutton='false')
					header
						span.widget-icon
							i.fa.fa-bar-chart-o
						h2 Persona Per User
						i#popoverPersona.fa.fa-question-circle(data-toggle='popover', data-placement='bottom', data-content=' A frequency distribution showing how many personas members have. The x-axis shows buckets for number of personas. The y-axis shows the number of members in the bucket.', data-original-title='', title='')
					div
						// widget edit box
						div.jarviswidget-editbox
						// This area used as dropdown edit box
						div#personaPerUser.widget-body.no-padding
							svg(style='height: 380px;')

script(type='text/javascript').

	pageSetUp();
	$('#popoverLocation').popover({ trigger: "hover focus" });
	$('#popoverContacts').popover({ trigger: "hover focus" });
	$('#popoverCards').popover({ trigger: "hover focus" });
	$('#popoverPersona').popover({ trigger: "hover focus" });

