extends ../../layouts/page/analytics
block controllers
	script(src='/controllers/analytics/viewcontactsController.js')
	
block content
	.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
		div(data-ng-controller="viewcontactsController")
			.row.placeholders
				.col-xs-12.col-sm-12.placeholder
					.col-xs-6.col-sm-6.placeholder
						h2 View Contacts
						#viewcontacts
							ul
								li
									span(ng-click="getLineChartData('day','viewContactsList','viewcontacts')") 1D
								li
									span(ng-click="getLineChartData('week','viewContactsList','viewcontacts')")  1W
								li
									span(ng-click="getLineChartData('month','viewContactsList','viewcontacts')")  1M
								li
									span(ng-click="getLineChartData('sixmonths','viewContactsList','viewcontacts')")  6M
								li
									span(ng-click="getLineChartData('year','viewContactsList','viewcontacts')")  1Y
								li
									span(ng-click="getLineChartData('Max','viewContactsList','viewcontacts')")  Max
							svg(style='height: 380px;')
				.col-xs-6.col-sm-6.placeholder
					h4 User Location
					#map
				.col-xs-6.col-sm-6.placeholder
					h4 User Devices
					.col-xs-6.col-sm-6.placeholder
						h5 Devices
						svg#deviceChart
					.col-xs-6.col-sm-6.placeholder
						h5 Browsers
						svg#browserChart